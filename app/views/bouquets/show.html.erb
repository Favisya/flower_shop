<h2>
  <%= link_to 'Все букеты', bouquets_path, :class => 'link' %>
</h2>

<span>
  Адрес:
  <%= @bouquet.address %>
</span>
<span>
  Номер телефона:
  <%= @bouquet.number %>
</span>
<% if @bouquet.sold == false %>
  <span style="color: red;">
    Еще не продан
</span>
<% else %>
  <span style="color: green;">
  Продан

</span>
<% end %>
<span>
  id:
  <%= @bouquet.id %>
</span>
<div>
  ID точки:
  <%= @bouquet.shop_id %>
</div>

<div>
  Стоимость букета:
  <%= @price %>
  рублей
</div>
<h2>
<% if @bouquet.sold == false %>
  <%= link_to 'Продать', { controller: :bouquets, action: :sold }, :class => 'link' %>
<% end %>
<% if @bouquet.sold == false %>
  <%= link_to 'Удалить все', { controller: :bouquets, action: :remove_all }, :class => 'link_negative' %>
  <%= link_to 'Сохранить', "/save/" + @bouquet.id.to_s, { controller: :bouquets, action: :save, :class => 'link' } %>
<% else %>
<% end %>
</h2>
<table class="table">
  <thead>
  <tr>
    <th> Цветок</th>
    <th> Цена</th>
    <th> Количество</th>
    <% if @bouquet.sold == false %>
    <th> Доступно</th>
    <th> Удалить</th>
      <%end %>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @bouquet.flowers.each do |flower| %>
    <tr>
      <td>
        <%= flower.name %>
      </td>
      <td>
        <%= flower.price %>
      </td>
      <td style="justify-content: center">
        <% if @bouquet.sold == false %>
          <%= link_to '-', "/minus/" + flower.id.to_s, { controller: :bouquets, action: :minus, :class => 'link' } %>

          <%= @counters.find_by(flower_id: flower.id, bouquet_id: $current_bouquet.id).counter %>

          <%= link_to '+', "/plus/" + flower.id.to_s, { controller: :bouquets, action: :plus, :class => 'link' } %>
        <% else %>
          <%= @counters.find_by(flower_id: flower.id, bouquet_id: $current_bouquet.id).counter %>
        <% end %>
      </td>
      <% if @bouquet.sold == false %>
        <td>
          <%= flower.num - @counters.find_by(flower_id: flower.id, bouquet_id: $current_bouquet.id).counter %>
        </td>
        <td>
          <%= link_to 'Удалить из букета', "/remove/" + flower.id.to_s, { controller: :bouquets, action: :remove, :class => 'link_negative' } %>
        </td>
      <% else %>

      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<% if @bouquet.sold == false %>
  <%= form_tag bouquet_path, :method => "get" do %>
    <%= label_tag(:search, "What flower would you like to add: ") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search", :name => nil, :class => 'link') %>
  <% end %>
  <table class="table">
    <thead>
    <tr>
      <th> Цветок</th>
      <th> Цена</th>
      <th> Количество на складе</th>
      <th> Добавить</th>
    </tr>
    </thead>
    <tbody>
    <% @finder.each do |flower| %>
      <tr>
        <td>
          <%= flower.name %>
        </td>
        <td>
          <%= flower.price %>
        </td>
        <td>
          <%= flower.num %>
        </td>
        <td>
          <%= link_to 'Добавить в букет', "/add/" + flower.id.to_s, { controller: :bouquets, action: :add_in_bouquet, :class => 'link' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
