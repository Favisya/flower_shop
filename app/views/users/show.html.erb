<div class="main">
  <div style="padding: 30px">
    <h1>
      <span>
        Профиль
        <%= button_to "Выйти", logout_path, :method => :delete, :class => 'link' %>
      </span>
    </h1>
    <h2>
      Должность: <%= @current_user.role.position %>
    </h2>
    <span>
      Фамилия: <%= @current_user.surname %>
    </span>
    <div>
      Имя: <%= @current_user.name %>
    </div>
    <div>
      Логин: <%= @current_user.login %>
    </div>
    <div>
      Email: <%= @current_user.email %>
    </div>
    <div style="justify-content:space-between;flex-direction: row;margin-top: 10px">
      <%= link_to 'Сотрудники', admin_url, :class => 'link' %>
      <%= link_to 'Букеты', bouquets_path, :class => 'link' %>
    </div>

  </div>
</div>
